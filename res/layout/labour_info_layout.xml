<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" 
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <RelativeLayout
        android:id="@+id/relativeLayout1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_margin="10dp" >

        <ImageView
            android:id="@+id/imgDisplayPic"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:scaleType="fitXY"
            android:layout_centerVertical="true"
            android:contentDescription=" "
            android:src="@drawable/ic_launcher" />

        <TextView
            android:id="@+id/txtName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@+id/imgDisplayPic"
            android:text=""
            android:textAppearance="?android:attr/textAppearanceMedium" />
    </RelativeLayout>

    <TableLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:layout_below="@+id/relativeLayout1" >

        <TableRow
            android:id="@+id/tableRow1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" 
            android:padding="5dip"
            >
            
            <TextView
	            android:id="@+id/txtOne1"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:text="Nationality"
	            
             />
            
            <TextView
	            android:id="@+id/txtNationality"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:text=""
	            android:layout_marginLeft="10dp"
             />
            
        </TableRow>

        <TableRow
            android:id="@+id/tableRow2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" 
            android:padding="5dip"
            >
            
            <TextView
	            android:id="@+id/txtTwo2"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:text="Passport"
             />
            
            <TextView
	            android:id="@+id/txtPassport"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:text=""
	            android:layout_marginLeft="10dp"
             />
            
        </TableRow>

        <TableRow
            android:id="@+id/tableRow3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" 
            android:padding="5dip"
            >
            
            <TextView
	            android:id="@+id/txtThree3"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:text="Camp"
             />
            
            <TextView
	            android:id="@+id/txtCamp"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:text=""
	            android:layout_marginLeft="10dp"
             />            
            
        </TableRow>
    </TableLayout>

    <Button
        android:id="@+id/btnViewOffences"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/btnViewMovement"
        android:layout_marginBottom="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:text="@string/btnViewOffencesText" />
    
    <Button
        android:id="@+id/btnViewMovement"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:text="@string/btnViewMovementText" />

</RelativeLayout>